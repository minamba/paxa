@model SinisterWebApp.Models.Sinisters

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";

    string status = "";
}


<!--JUmbotron-->
<div class="jumbotron backgroundHome">
    <h1 class="otherTitle text-center">D</h1>
</div>

<div class="container-fluid pt-3 pb-3 col-lg-12 col-md-12 col-12">
    <h4 class=" pt-2 subTitle">Details</h4>
    <hr class="hrColor mb-3" />
    <div>
