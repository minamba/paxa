            <div class="card mb-5">
                <div class="card-m3 shadow ol-lg-4">
                    <dl class="dl-horizontal col-lg-12 col-md-12 col-12">
                        @{
                            if (Model.SinisterStatusId != 1)
                            {
                                status = "statusWaiting";
                            }
                            else
                            {
                                status = "statusValid";

                            }
                        }

                        <h5 class="card-title pt-3">
                            <b>Sinister informations</b>
                            <hr class="bg-danger" />
                        </h5>

                        <div class="form-group pt-4">
                            @Html.LabelFor(model => model.SinisterStatus.Name, new { @Class = "cardLabel" }) :
                            @Html.EditorFor(model => model.SinisterStatus.Name, new { htmlAttributes = new { @class = status, disabled = "disabled" } })
                        </div>
                        <hr />

                        <div class="form-group">
                            @Html.LabelFor(model => model.Sites.Name, new { @Class = "cardLabel" }) :
                            @Html.EditorFor(model => model.Sites.Name, new { htmlAttributes = new { @class = "cardTxt", disabled = "disabled" } })
