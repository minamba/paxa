@model IEnumerable<SinisterWebApp.Models.Sinisters>

@{
    ViewBag.Title = "Home Page";
}

<!--JUmbotron-->
<div class="jumbotron backgroundHome">
    <h1 class="titleHome">Axa global sinisters</h1>
    <p class="text-light underTitleHome">This platform is a census of all disasters happening in the world</p>
</div>

<!--Map-->
<div class="container-fluid pb-5 mapBackground">
    <div class="rounded-pill pt-3 pb-3" data-aos="fade-up">
        <h2 class="text-center bigTitleColor">Latest global sinisters</h2>
    </div>
    <div id="map" class="row col-12">
        <div class="map-wrapper">
            <img src="https://achology.com/wp-content/uploads/worldmap-dots-white.png" alt="Map" />
        </div>
        <div id="points-wrapper">
            <div class="point point-1"></div>
            <div class="point point-2"></div>
            <div class="point point-3"></div>
            <div class="point point-4"></div>
            <div class="point point-5"></div>
            <div class="point point-6"></div>
            <div class="point point-7"></div>
            <div class="point point-8"></div>
            <div class="point point-9"></div>
            <div class="point point-10"></div>
        </div>
    </div>
</div>

<!--table-->
<div class="container-fluid pt-4 pb-4">
    <h2 class="text-center bigTitleColor pb-4">The last 10 sinisters in the world</h2>

    <table class="table table-striped text-muted border shadow">
        <tr class="tableHeader">
            <th>
                Country
            </th>
            <th>
                Client
            </th>
            <th>
                Site
            </th>
            <th>
                Type
            </th>
            <th>
                Sector
            </th>
            <th>
                Date
            </th>
            <th>
                Details
            </th>
            <th>
                Edit
            </th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>
            <b>@Html.DisplayFor(modelItem => item.Countries.Name)</b>
        </td>
        <td>
            <b>@Html.DisplayFor(modelItem => item.Clients.Name)</b>
        </td>
        <td>
            <b>@Html.DisplayFor(modelItem => item.Sites.Name)</b>
        </td>
        <td>
            <b>@Html.DisplayFor(modelItem => item.SinisterTypes.Name)</b>
        </td>
        <td>
            <b>@Html.DisplayFor(modelItem => item.ActivitySectors.Name)</b>
        </td>
        <td>
            <b>@Html.DisplayFor(modelItem => item.CreateDate)</b>
        </td>
        <td class="text-success">
            <a href="@Url.Action("Details", "Sinisters", new { id = item.SinisterId })">See more...</a>
        </td>
        <td class="text-success">
            <a href="@Url.Action("Edit", "Sinisters", new { id = item.SinisterId })">Edit</a>
        </td>
    </tr>
        }
    </table>
</div>